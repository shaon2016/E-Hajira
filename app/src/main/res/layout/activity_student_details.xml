<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.UserDetailsActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                tools:background="@drawable/beats"
                android:id="@+id/ivNotice"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="16dp" />

            <TextView
                android:id="@+id/tvNotice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="School will face off day tomorrow"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textSize="16sp"
                tools:text="24/10/2019" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                tools:text="12:00 PM" />


            <TextView
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Student Details" />


            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/ivStudent"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/beats" />

            <TextView
                android:textColor="@android:color/holo_red_light"
                android:textSize="24sp"
                android:layout_marginTop="8dp"
                android:text="Verified"
                android:id="@+id/tvVarifiedOrNotVerified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:text="@string/name"
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:text="@string/mobile_no"
                android:id="@+id/tvMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:text="@string/line_description"
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAssignedFor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:layout_marginBottom="16dp"
                android:textSize="28sp" />

            </LinearLayout>
    </ScrollView>
</LinearLayout>
